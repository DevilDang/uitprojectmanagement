<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

<!--
     This is a minimal Validator form file with a couple of examples.
-->

    <global>

        <!-- An example global constant
        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^\d{5}\d*$</constant-value>
        </constant>
        end example-->

    </global>

    <formset>

        <!-- An example form -->
        <form name="logonForm">
            <field
                property="username"
                depends="required">
                    <arg key="logonForm.username"/>
            </field>
            <field
                property="password"
                depends="required,mask">
                    <arg key="logonForm.password"/>
                    <var>
                        <var-name>mask</var-name>
                        <var-value>^[0-9a-zA-Z]*$</var-value>
                    </var>
            </field>
        </form>

<!-- Organization -->
        <form name="organization">
            <field
                property="nameOrg"
                depends="required">
                    <arg key="organization.nameOrg"/>
            </field>
            <field
                property="addOrg"
                depends="required">
                    <arg key="organization.addOrg"/>
            </field>
            <field
                property="numberOrg"
                depends="required, mask">
                    <arg key="organization.numberOrg"/>
                    <var>
                    <var-name>mask
                    </var-name>
                    <var-value>[0-9]</var-value>
                    </var>
            </field>
        </form>
        
        <!-- Report -->
        <form name="report">
            <field
                property="title"
                depends="required">
                    <arg key="report.title"/>
            </field>
            <field
                property="content"
                depends="required">
                    <arg key="report.content"/>
            </field>
        </form>
        
        <!-- Req -->
        <form name="req">
            <field
                property="nameReq"
                depends="required">
                    <arg key="req.nameReq"/>
            </field>
            <field
                property="idGroup"
                depends="required">
                    <arg key="req.idGroup"/>
            </field>
            <field
                property="content"
                depends="required">
                    <arg key="req.content"/>
            </field>
            <field
                property="startDate"
                depends="required,date">
                    <arg key="req.startDate"/>
                    <var>
                    <var-name>datePattern</var-name>
                    <var-value>dd/MM/yyyy</var-value>
                    </var>
            </field>
             <field
                property="endDate"
                depends="required,date">
                    <arg key="req.endDate"/>
                    <var>
                    <var-name>datePattern</var-name>
                    <var-value>dd/MM/yyyy</var-value>
                    </var>
            </field>
        </form>
        
         <!-- Task -->
        <form name="task">
            <field
                property="kind"
                depends="required">
                    <arg key="task.kind"/>
            </field>
            <field
                property="nameTask"
                depends="required">
                    <arg key="task.nameTask"/>
            </field>
            <field
                property="emailEmployee"
                depends="required">
                    <arg key="task.emailEmployee"/>
            </field>
             <field
                property="content"
                depends="required">
                    <arg key="task.content"/>
            </field>
            <field
                property="startDate"
                depends="required,date">
                    <arg key="task.startDate"/>
                    <var>
                    <var-name>datePattern</var-name>
                    <var-value>dd/MM/yyyy</var-value>
                    </var>
            </field>
            <field
                property="endDate"
                depends="required,date">
                    <arg key="task.endDate"/>
                    <var>
                    <var-name>datePattern</var-name>
                    <var-value>dd/MM/yyyy</var-value>
                    </var>
            </field>
            <field
                property="process"
                depends="required">
                    <arg key="task.process"/>
            </field>
            <field
                property="status"
                depends="required">
                    <arg key="task.status"/>
            </field>
        </form>
        
    </formset>

    <!-- An example formset for another locale -->
    <formset language="fr">

        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^[0-9a-zA-Z]*$</constant-value>
        </constant>

        <!-- An example form -->
        <form name="logonForm">
            <field
                property="username"
                depends="required">
                    <arg key="logonForm.username"/>
            </field>
            <field
                property="password"
                depends="required,mask">
                    <arg key="logonForm.password"/>
                    <var>
                        <var-name>mask</var-name>
                        <var-value>^[0-9a-zA-Z]*$</var-value>
                    </var>
            </field>
        </form>

   </formset>

</form-validation>
