<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
  <form-beans>
  <!-- po form đăng nhập vào ứng dụng-->
   <form-bean name="UserForm" type="sp.form.UserForm"/>
  <!-- po -->
  </form-beans>
  <global-forwards>
    <forward name="Welcome" path="/home.vn"/>
  </global-forwards>
  <action-mappings>
    
    <!-- Po - action xử lý chứng thực đăng nhập vào ứng dụng -->
     <action input="/login.jsp" name="UserForm" path="/LogIn" type="sp.action.LogIn" scope="session">
       <forward name="success" path="index.jsp"/>
     </action>
     
     <!-- Po - action xử lý chứng thực đăng nhập vào ứng dụng -->
     
    <!-- upload File -->
    <action path="/uploadFile" type="sp.action.file.UploadFile"  >
    	<forward name="success" path="/transferFile.do" redirect="true" />
    </action>
    
    <action path="/transferFile"  forward="uploadPic.jsp" >
    </action>
    
    <!-- download File -->
    <action path="/downloadFile" type="sp.action.file.DownloadFile"  validate="false">
    	<forward name="success" path="uploadPic.jsp" redirect="true" />
    </action>
    
  </action-mappings>
  <message-resources parameter="ApplicationResources"/>
  <!-- ========================= Validator plugin ================================= -->
  <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    <set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
  </plug-in>
</struts-config>
